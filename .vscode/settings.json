{
  // Enforce Unix-style (LF) line endings
  // in VsCode-created files.
  // Otherwise the default line ending is CRLF on Windows,
  // which can cause issues in cross-platform development
  // and with tools that expect LF.
  "files.eol": "\n",
  
  "cSpell.allowCompoundWords": true,
  "cSpell.words": [
    "Aristov",
    "Kodi"
  ],

  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // .tsx files
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  // Json with Comments
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },

  "search.exclude": {
    "**/.yarn": true,
    "**/.pnp.*": true
  },

  // Required for VsCode
  // to provide TypeScript IntelliSense with Yarn V4
  "typescript.tsdk": ".yarn/sdks/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "prettier.prettierPath": ".yarn/sdks/prettier/index.cjs"
}
